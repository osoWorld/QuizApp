<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quiz_1"
    tools:context=".Result.ResultsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="20dp"
            android:textColor="@color/textColor"
            android:textSize="24sp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/resultsAnimation"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginBottom="20dp"
        app:lottie_autoPlay="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_rawRes="@raw/winn" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Winner"
        android:textColor="@color/textColor"
        android:textSize="40sp"
        android:padding="20dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/playAgainButton"
            android:layout_width="250dp"
            android:layout_height="54dp"
            android:text="Do you want to play again ?"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            android:background="@drawable/options_btn_bg"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>